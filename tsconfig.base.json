{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",

    "lib": [
      "es2020",
      "dom"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",

    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,

    "paths": {
      "@wowthing/testlib": ["packages/testlib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
